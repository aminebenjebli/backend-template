# App
PORT=8050
BASE_URL=http://127.0.0.1:8050/
NODE_ENV=development
ALLOWED_ORIGINS=*

# Throttle
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Database
DATABASE_URL="mongodb+srv://username:password@hostname/hackini_db?retryWrites=true&w=majority"

#JWT
JWT_SECRET=secret

# Email Configuration for Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_PASSWORD=your-gmail-password
EMAIL_FROM=your-gmail-address@gmail.com

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIRECTORY=uploads
